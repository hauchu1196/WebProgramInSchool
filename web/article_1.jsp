            <script>
                function initMap() {
                    var map = new google.maps.Map(document.getElementById('map'), {
                        mapTypeControl: false,
                        center: {lat: 20.9724404, lng: 105.83413530000007},
                        zoom: 13
                    });
                    var directionsService = new google.maps.DirectionsService;
                    var directionsDisplay = new google.maps.DirectionsRenderer;
                    directionsDisplay.setMap(map);
                    var yourPos = new google.maps.LatLng(20.9724404, 105.83413530000007);
                    var destinationPos = new google.maps.LatLng(10.583714, 105.0598097);
                    if (navigator.geolocation) {
                        navigator.geolocation.getCurrentPosition(function (position) {
                            var lat = position.coords.latitude;
                            var lng = position.coords.longitude;
                            yourPos = new google.maps.LatLng(lat, lng);
                            directionsService.route({
                                origin: yourPos,
                                destination: destinationPos,
                                travelMode: google.maps.TravelMode['DRIVING']
                            }, function (response, status) {
                                if (status === 'OK') {
                                    directionsDisplay.setDirections(response);
                                    console.log('Success');
                                } else {
                                    window.alert('Directions request failed due to ' + status);
                                }
                            });
                        });
                    } else {
                        alert("Geolocation is not supported by this browser. Set defaul Ha Noi");
                    }
                }
            </script>
